---
import CapybaraImg from "./capybara-img.astro";

const content = {
  mission:
    "Nossa missão é unir apaixonados por vôlei, promovendo um ambiente inclusivo e divertido para todos os níveis de habilidade.",
  madeBy: "Feito com ❤️",
};
---

<footer class="bg-white border-t-2 border-slate-900 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="mb-6 flex justify-center items-center gap-2">
      <span class="text-3xl" role="img" aria-label="Capybara">
        <CapybaraImg />
      </span>
      <h4 class="font-display font-bold text-2xl text-slate-900">Capivolei</h4>
    </div>

    <p class="text-slate-600 font-medium text-lg max-w-md mx-auto mb-8">
      {content.mission}
    </p>

    <div class="flex justify-center gap-2 mb-8">
      <div class="w-4 h-4 bg-brand-500 border-2 border-slate-900 rounded-full">
      </div>
      <div class="w-4 h-4 bg-accent-400 border-2 border-slate-900 rounded-full">
      </div>
      <div class="w-4 h-4 bg-blue-500 border-2 border-slate-900 rounded-full">
      </div>
    </div>

    <div class="pt-8 border-t border-slate-100">
      <p class="text-sm font-bold text-slate-400 uppercase tracking-wider">
        {content.madeBy}
      </p>
    </div>
  </div>
</footer>
